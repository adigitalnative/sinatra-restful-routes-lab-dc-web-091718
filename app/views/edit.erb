<h2>Edit Recipe</h2>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
 <p><label name="name">Name: </label>
  <input type="text" name="recipe[name]" value="<%= @recipe.name %>" id="name"/></p>
  <p>
    <label name="ingredients">Ingredients: </label>
    <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>" id="ingredients"/>
  </p>
  <p>
    <label name="cook_time">Cook Time: </label>
    <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>" id="cook_time" />
  </p>
  <input type="submit" name="submit" id="submit"/>
</form>