<h2>Add a Recipe</h2>

<form action="/recipes" method="post">
 <p><label name="name">Name: </label>
  <input type="text" name="recipe[name]" /></p>
  <p>
    <label name="ingredients">Ingredients: </label>
    <input type="text" name="recipe[ingredients]" />
  </p>
  <p>
    <label name="cook_time">Cook Time: </label>
    <input type="text" name="recipe[cook_time]" />
  </p>
  <input type="submit" name="submit" />
</form>